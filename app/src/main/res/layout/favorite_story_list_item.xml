<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_minHeight"
    app:cardBackgroundColor="@color/colorCards"
    app:cardCornerRadius="@dimen/story_card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/card_top_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fav_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/description_horizontal_margin"
            android:layout_marginLeft="@dimen/description_horizontal_margin"
            android:layout_marginRight="@dimen/description_horizontal_margin"
            android:layout_marginStart="@dimen/description_horizontal_margin"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/primary_text_size"
            tools:text="AZzZAZAZAZHGAJDGHJDGAJHSGAGSGAJS"/>

        <!-- todo Gray Stripe divider-->

        <RelativeLayout
            android:id="@+id/action_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/action_area_padding"
            android:layout_weight="1">

            <Button
                android:id="@+id/fav_share"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/more_button_height"
                android:src="@drawable/ic_action_share"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/share_button_padding"
                android:text="@string/action_share"
                android:textColor="@color/button_color_text"
                android:textSize="@dimen/card_button_textSize"/>

            <Button
                android:id="@+id/fav_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/more_button_height"
                android:background="?android:attr/selectableItemBackground"
                android:layout_toRightOf="@+id/fav_share"
                android:layout_toEndOf="@+id/fav_share"
                android:gravity="center"
                android:padding="@dimen/more_button_padding"
                android:text="@string/action_more"
                android:textColor="@color/button_color_text"
                android:textSize="@dimen/card_button_textSize"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>