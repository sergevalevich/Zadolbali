<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_minHeight"
    app:cardBackgroundColor="@color/colorCards"
    app:cardCornerRadius="@dimen/story_card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/card_top_padding">

        <TextView
            android:layout_weight="3"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "AZzZAZAZAZHGAJDGHJDGAJHSGAGSGAJS"
            android:textSize="@dimen/primary_text_size"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/description_horizontal_margin"
            android:layout_marginStart="@dimen/description_horizontal_margin"
            android:layout_marginRight="@dimen/description_horizontal_margin"
            android:layout_marginEnd="@dimen/description_horizontal_margin"/>

        <!-- todo Gray Stripe divider-->

        <RelativeLayout
            android:id="@+id/action_area"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "@dimen/action_area_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/action_padding">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_button"
                    android:button= "@drawable/share_button"/>


                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@drawable/favorite_button"
                    android:layout_marginLeft="@dimen/star_left_padding"
                    android:layout_marginStart="@dimen/star_left_padding"/>
            </LinearLayout>

            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/more_button_height"
                android:text="@string/action_more"
                android:textSize="@dimen/card_button_textSize"
                android:textColor="@color/button_color_text"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/more_button_padding"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>